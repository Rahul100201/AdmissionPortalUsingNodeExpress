    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">

                <div class="col-sm-7">
                    <!-- <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a> -->


                </div>

                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="/assets/img/img_avatar3.png" alt="User Avatar">
                        </a>
                        <div class="user-menu dropdown-menu">
                            <a class="nav-link" href="#"><i class="fa fa-user"></i> My Profile</a>
                            <a class="nav-link" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->
        <div class="content mt-3">
            <div class="container">
                <h1 class="text-center"
                    style="color: black; font-family: 'Raleway',sans-serif; font-size: 43px; font-weight: 800; line-height: 72px; margin: 0 0 24px; text-align: center; text-transform: uppercase;">
                    REGISTRATION DETAILS</h1>
                <hr>
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">S.NO</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Status</th>
                            <th scope="col">Comments</th>
                            <th scope="col"></th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i= 1 %>
                        <% d.forEach((item)=>{ %>
                            <tr>
                                <td>
                                    <%= i++ %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <% if(item.status==="Accepted") {%>
                                    <td><button class="btn btn-success"><%= item.status %></button></td>
                                    <%  } else{%>
                                      <td><button class="btn btn-danger"><%= item.status %></button></td>
                                      <% } %>
                                    <!-- Start Form tag from here-->
                                    <form action="/admin/update_status/<%= item._id %>" method="POST">
        
                                    
                                    <td><textarea name="comment" ></textarea></td>
                                    <td>
                                      <button name="status" value="Rejected" class="btn btn-danger">Rejected</button>
                                      <button name="status" value="Accepted" class="btn btn-success">Accepted</button>
                                    </td>
                                  </form>
                                
    
                                <td><a href="/admin/registration_details/<%= item._id %>" class="btn btn-info">view</a>
                                    
                                    <a href="/admin/deleteregistration/<%= item._id %>" class="btn btn-danger">delete</a>
                                  
                                </td>
                            </tr>




                            <% }) %>

                    </tbody>

                </table>
            </div>




        </div> <!-- .content -->
    </div><!-- /#right-panel -->

